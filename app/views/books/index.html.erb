<p id="notice"><%= notice %></p>

<h1>Books</h1>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to "Show", book_path(book.id) %></span></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td><br>
    </tr>
  </tbody>
    <% end %>
</table>


<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<div class="text">Title<br>
<%= f.text_field :title %><br>
</div>
<div class="text">Body<br>
  <%= f.text_area :body %><br>
</div>
<%= f.submit 'Create Book' %><br>
<% end %>





